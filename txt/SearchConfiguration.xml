<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE configuration [
  <!ENTITY amp "&#x26;">
  <!ENTITY lt "&#x3C;">
]>

<!--
 | Configuration for the regain search taglib
 | (for searching on a previously created search index)
 +-->
<configuration>

  <!-- The search indexes -->
  <indexList>
    <!--
     | All settings defined in this section are applied to all indexes unless
     | they redefine the setting.
     +-->
    <defaultSettings>
      <!--
       | The regular expression that identifies URLs that should be opened in
       | a new window.
       +-->
      <openInNewWindowRegex>.(pdf|rtf|doc|xls|ppt)$</openInNewWindowRegex>
      
      <!--
       | The index fields to search by default.
       |
       | NOTE: The user may search in other fields also using the
       | "field:"-operator. Read the lucene query syntax for details:
       | http://jakarta.apache.org/lucene/docs/queryparsersyntax.html
       +-->
      <searchFieldList>content title headlines</searchFieldList>
    </defaultSettings>
    
    <!-- The search index 'main' -->
    <index name="main">
      <!-- The directory where the index is located -->
      <dir>c:\Temp\searchindex</dir>
      
      <rewriteRules>
        <rule prefix="file://c:/Temp/dokumente/doc" replacement="file://///knecht/test1"/>
        <rule prefix="file://c:/Temp/dokumente/xls" replacement="file://///knecht/test2"/>
      </rewriteRules>
    </index>
    
    <!-- The search index 'big' -->
    <index name="big">
      <!-- The directory where the index is located -->
      <dir>c:\Temp\searchindex_big</dir>
    </index>
  </indexList>

</configuration>
